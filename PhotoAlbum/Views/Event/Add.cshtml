@model PhotoAlbum.ViewModels.AddEventViewModel

@{ ViewData["Title"] = "Add Event";
}

<h1 class="text-primary pt text-center bg-primary">@ViewData["Title"]</h1>

<form method="post" asp-controller="Event" asp-action="Add">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <input class="form-control" asp-for="Description" />
    </div>

    <div class="form-group">
        <label asp-for="EventTypeID">Event Type</label>
        <select asp-for="EventTypeID" asp-items="Model.EventTypes"></select>
        <a asp-controller="EventType" asp-action="Add" class="btn btn">+Add a new Event Type</a>
    </div>

    <input type="submit" value="Add" class="btn btn-primary" />

</form>