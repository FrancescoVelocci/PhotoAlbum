@model PhotoAlbum.ViewModels.AddEventViewModel

@{ ViewData["Title"] = "Add Event";
}

<h1>@ViewData["Title"]</h1>

<form method="post" asp-controller="Event" asp-action="Add">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <input class="form-control" asp-for="Description" />
    </div>

    <div class="form-group">
        <label asp-for="EventTypeID">Event Type</label>
        <select asp-for="EventTypeID" asp-items="Model.EventTypes"></select>
    </div>
        <a asp-controller="Event" asp-action="Add">Add a new Event Type</a> | Edit | Remove

    <input type="submit" value="Add Event" />
</form>