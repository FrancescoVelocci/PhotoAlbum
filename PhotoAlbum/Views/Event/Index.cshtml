@model List<PhotoAlbum.Models.Event>

@{
    ViewData["Title"] = "Events";
}

<h1 class="text-primary pt text-center bg-primary">@ViewData["Title"]</h1>


<table class="table">
    <tr>
        <th>Name</th>
        <th>Event Type</th>
        <th>Description</th>
    </tr>

    @foreach (Event anEvent in Model)
    {
        <tr>
            <td>@anEvent.Name</td>
            <td>@anEvent.EventType.Name</td>
            <td>@anEvent.Description</td>
        </tr>
    }
</table>


@if (Model.Count == 0)
{
    <p>No event yet!</p>
}

<a asp-controller="Event" asp-action="Add" class="btn btn-primary">Add Event</a>
