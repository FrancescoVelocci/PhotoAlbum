@model PhotoAlbum.ViewModels.AddEventTypeViewModel

@{ ViewData["Title"] = "Add Event Type";
}

<h1 class="text-primary pt text-center bg-primary">@ViewData["Title"]</h1>

<form method="post" asp-controller="EventType" asp-action="Add">

    <div class="form-group">
        <label asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
        <span asp-validation-for="Name"></span>
        <p>@ViewBag.Validation</p>
    </div>
    
    <div class="inline">
        <input type="submit" value="Add" class="btn btn-info" />
        <a asp-controller="Event" asp-action="Add" class="btn btn-default">Add a new Event</a>
    </div>
</form>

