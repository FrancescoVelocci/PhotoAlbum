@model List<PhotoAlbum.Models.Stack>


@{
    ViewData["Title"] = "Pictures Stacks";
}

<h1 class="text-primary pt text-center bg-primary">@ViewData["Title"]</h1>
<h4>Select a Stack of unorganized pictures and add info to it:</h4>

@if (Model.Count() == 0)
{
    <p>No picture uploaded yet.</p>
}
else
{
    <div>
        <strong><a asp-controller="Stack" asp-action="ViewStack" class="btn btn-info">Open All</a></strong>
    </div>
    <br />

    <div>
        <strong><a asp-controller="Stack" asp-action="ViewStack" asp-route-id="@Model[Model.Count()-1].ID" class="btn btn-default">Open</a></strong>
        Created on @Model[Model.Count() - 1].Name<strong> - LAST CREATED</strong>
    </div>
            
        @for (int i = Model.Count() - 2; i >= 0; i -= 1)
        {
    <div>
        <a asp-controller="Stack" asp-action="ViewStack" asp-route-id="@Model[i].ID" class="btn btn-default">Open</a>
        Created on @Model[i].Name
    </div>
        }

}

