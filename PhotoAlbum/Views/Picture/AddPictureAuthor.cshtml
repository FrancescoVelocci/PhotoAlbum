@model PhotoAlbum.ViewModels.AddPictureAuthorViewModel


@{
    ViewData["Title"] = "Add Author Info to your Pictures";
}

<h1>@ViewData["Title"]</h1>

<p>You have @Model.PictureIDs.Count() pictures left.</p><br />

<table>
    <tr>
        <th>SORT BY</th>
        <th></th>
    </tr>
    <tr>
        <td>Date</td>
        <td>
            @if (@ViewBag.Sorting == "Asc")
            {
                <form method="get" asp-controller="Picture" asp-action="AddPictureAuthor">
                    <input type="hidden" name="sortOrder" value="Desc" />
                    <input type="hidden" name="StackID" value="@Model.StackID" />
                    <button>Descendent</button>
                </form>
            }
            else
            {
                <form method="get" asp-controller="Picture" asp-action="AddPictureAuthor">
                    <input type="hidden" name="sortOrder" value="Asc" />
                    <input type="hidden" name="StackID" value="@Model.StackID" />
                    <button>Ascendent</button>
                </form>
            }
        </td>
    </tr>
</table>
<br />

<form method="post" asp-controller="Picture" asp-action="AddPictureAuthor">

    <input type="hidden" name="StackID" value="@Model.StackID" />

    <div class="form-group">
        <label asp-for="AuthorID">Author</label>
        <select asp-for="AuthorID" asp-items="Model.Authors"></select>
        <a href="/Author/Add"> Add a new Author </a>
    </div>

    <br />
    <br />

    <div class="form-group">
        <table class="table">
            <tr>
                <th>id</th>
                <th> </th>
                <th> </th>
                <th>Favorite</th>
                <th>Select Picture</th>
            </tr>

            @for (int i = 0; i < Model.PictureIDs.Count(); i++)
            {
                <tr>
                    <td>@Model.PictureIDs[i]</td>
                    <td>@Model.ViewPictureHelper[i].PictureDate.ToShortDateString()</td>
                    <td><img src="@Model.ViewPictureHelper[i].PictureName" alt="Pic not found" height="60" width="60" /></td>
                    <td>@Model.ViewPictureHelper[i].PictureFavorite</td>
                    <td>
                        <input type="checkbox" name="PictureIDs" value="@Model.PictureIDs[i]" />
                    </td>
                </tr>
            }
        </table>
    </div>

    <input type="submit" value="Add Author" />

</form>
