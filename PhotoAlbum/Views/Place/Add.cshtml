@model PhotoAlbum.ViewModels.AddPlaceViewModel

<h1>Add Place</h1>

<form asp-controller="Place" asp-action="Add" method="POST">

    <div class="form-group">
        <label asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>

    <input type="submit" value="Add Place" />

</form>

<a href="Location/Add">Add a new Location</a>
