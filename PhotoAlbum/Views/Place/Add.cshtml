@model PhotoAlbum.ViewModels.AddPlaceViewModel

@{
    ViewData["Title"] = "Add Place";
}

<h1 class="text-primary pt text-center bg-primary">@ViewData["Title"]</h1>

<form asp-controller="Place" asp-action="Add" method="POST">

    <div class="form-group">
        <label asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>

    <div class="inline">
        <input type="submit" value="Add" class="btn btn-info" />
        <a href="/Location/Add" class="btn btn-default">Add a new Location</a>
    </div>

</form>


