@model PhotoAlbum.ViewModels.AddAlbumViewModel

@{
    ViewData["Title"] = "Create a new Albums";
}

<h1 class="text-primary pt text-center bg-primary">@ViewData["Title"]</h1>


<form method="post" asp-controller="Album" asp-action="AddAlbum">

    <div class="form-group">
        <label asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <input class="form-control" asp-for="Description" />
    </div>

    <div>
        <input type="submit" value="Create Album" class="btn btn-info"/>
    </div>

</form>